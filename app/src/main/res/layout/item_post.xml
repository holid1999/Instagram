<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="6dp"
        android:id="@+id/post_user"
        android:src="@drawable/post_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_username"
        android:textColor="#222"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:text="user name"
        android:layout_marginStart="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_location"
        android:textColor="#222"
        android:textSize="12sp"
        android:layout_marginTop="40dp"
        android:text="locition"
        android:layout_marginStart="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@id/post_user"
        android:layout_alignTop="@id/post_user"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/post"
        android:layout_width="fill_parent"
        android:layout_height="375dp"
        android:layout_below="@id/post_user"
        android:layout_marginTop="6dp"
        android:src="@drawable/post" />

    <ImageView
        android:id="@+id/img_lake"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/post"
        android:src="@drawable/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_comment"
        android:layout_marginTop="15dp"
        android:layout_marginStart="65dp"
        android:layout_below="@id/post"
        android:src="@drawable/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_messanger"
        android:layout_marginTop="16dp"
        android:layout_marginStart="105dp"
        android:layout_below="@id/post"
        android:src="@drawable/ic_messanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_save"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/post"
        android:src="@drawable/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_Description"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#222"
        android:textSize="12sp"
        android:text="Description"
        android:layout_below="@id/img_lake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>